generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Statistic {
  id        Int      @id @default(autoincrement())
  userId    String
  type      String
  amount    Float
  createdAt DateTime @default(now())
}

model Budget {
  id        Int      @id @default(autoincrement())
  title     String
  amount    Float
  createdAt DateTime @default(now())
  userId    String
}
